<%= form_for([@book, @note]) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <% f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <% f.hidden_field :book_id, :value => @book.id %>
  </div>

  <div class="field">
    <%= f.label :page %><br>
    <%= f.number_field :page_num %>
  </div>

  <div class="field">
    <%= f.label :topic %><br>
    <%= f.text_field :topic %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field"
    <% f.hidden_field :parent_note_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
