<div class="col-sm-2 sidenav hidden-xs">
      <ul class="nav nav-pills nav-stacked">
        <li><%= link_to 'Public', books_path %></li>
        <% if user_signed_in? %>
          <li class="active"><%= link_to 'Book Shares', shares_path %></li>
        <% end %>
      </ul><br>
    </div>
    <div class="col-sm-9">
        <table>
          <thead>
            <tr>
              <th>From User</th>
              <th>Book</th>
              <th>Message</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @shares.each do |share| %>
              <tr>
                <td><%= share.share_from.codename %></td>
                <td><%= share.book.title %></td>
                <td><%= share.message %></td>
                <td><%= link_to 'Show', share %></td>
                <td><%= link_to 'Edit', edit_share_path(share) %></td>
                <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Share', new_share_path %>
    </div>
